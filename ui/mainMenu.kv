<MenuScreen>:
    MDScreen:
        MDBoxLayout:
            orientation: "vertical"
            MDLabel:
                text: "HOMESTUCK MOBILE READER"
                font_name: "CubicPixel"
                font_size: 56
                color: [255,17,0,1]
                halign: "center"

            MDBoxLayout:
                orientation: "horizontal"
                adaptive_size: True
                MDFlatButton:
                    text: "start"
                    font_name: "BreakPassword"
                    font_size: 36
                    on_release:
                        root.manager.transition.direction = "up"
                        root.manager.current = "game"

                MDFlatButton:
                    text: "options"
                    font_name: "BreakPassword"
                    font_size: 36

